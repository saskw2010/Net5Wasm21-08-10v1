@page "/"
@page "/productindex"
@layout MainLayout
@inherits Net5Wasm.Pages.ProductindexComponent

@using Radzen
@using Radzen.Blazor
@using Net5Wasm.Models.Net5Wasmconn
@using Microsoft.AspNetCore.Identity;
@using Net5Wasm.Models
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Productindex">
    </RadzenHeading>
    <div class="row">
      <div class="col-md-12">
        <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@Button0Click">
        </RadzenButton>
        <RadzenDataGrid @ref="grid0" AllowColumnResize="false" AllowFiltering="true" AllowPaging="true" AllowSorting="true" AllowVirtualization="true" Count="@getProductsCount" Data="@getProductsResult" FilterMode="FilterMode.Advanced" TItem="Net5Wasm.Models.Net5Wasmconn.Product" LoadData="@Grid0LoadData" RowSelect="@Grid0RowSelect">
          <Columns>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="Id" Title="Id">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" FormatString="{0:d}" Property="CreatedOn" Title="Created On">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" FormatString="{0:d}" Property="ModifiedOn" Title="Modified On">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="IsDeleted" Title="Is Deleted">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" FormatString="{0:d}" Property="DeletedOn" Title="Deleted On">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="Name" Title="Name">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="Description" Title="Description">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="ImageSource" Title="Image Source">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="ImageSource" Title="Image Source">
              <Template Context="data">
               <div class="col-md-3">
                                  <div class="card card-product-grid">
                                      <a href="/products/@data.Id/@data.Name" class="img-wrap">
                                          <img src="@data.ImageSource" style="width: 40px; height: 40px; border-radius: 8px;" />
                                      </a>
                                      <figcaption class="info-wrap">
                                          <a href="/products/@data.Id/@data.Name" class="title">
                                              @data.Name
                                          </a>
              
                                          <div class="price mt-1">$@data.Price</div>
                                      </figcaption>
                                  </div>
                              </div>
                                     
              </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="Quantity" Title="Quantity">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Property="Price" Title="Price">
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" FilterProperty="Category.Name" Property="CategoryId" SortProperty="Category.Name" Title="Category">
              <Template Context="data">
              @(data.Category?.Name)
              </Template>
            </RadzenDataGridColumn>
            <RadzenDataGridColumn TItem="Net5Wasm.Models.Net5Wasmconn.Product" Filterable="false" Sortable="false" TextAlign="TextAlign.Center" Width="70px">
              <Template Context="net5WasmModelsNet5WasmconnProduct">
                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="close" Size="ButtonSize.Small" Click="@((args) =>GridDeleteButtonClick(args, net5WasmModelsNet5WasmconnProduct))" @onclick:stopPropagation="true">
                </RadzenButton>
              </Template>
            </RadzenDataGridColumn>
          </Columns>
        </RadzenDataGrid>
      </div>
    </div>
  </ChildContent>
</RadzenContent>
